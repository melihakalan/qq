<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_theme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar_color">

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/stlHome"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:stl_customTabTextLayoutId="@layout/tab_textview"
            app:stl_customTabTextViewId="@+id/tvTabs"
            app:stl_defaultTabTextAllCaps="false"
            app:stl_defaultTabTextColor="#EEEEEE"
            app:stl_defaultTabTextHorizontalPadding="18dp"
            app:stl_distributeEvenly="true"
            app:stl_dividerColor="#000000"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="@color/subbarcolor"
            app:stl_indicatorCornerRadius="14dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="24dp"
            app:stl_underlineColor="#00000000"
            app:stl_underlineThickness="0dp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>